<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/fruit"
            android:textColor="#000000"
            android:id="@+id/addFoodButton"
            android:layout_weight=".5"
            android:onClick="foodView"
            android:text="Add Food"

            android:layout_marginRight="5dp"></Button>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/veg"
            android:textColor="#000000"
            android:id="@+id/seeFridgeButton"
            android:layout_weight=".5"
            android:onClick="fridgeView"
            android:text="See Fridge"
            android:layout_marginLeft="5dp"></Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1"

        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/dairy"
            android:textColor="#000000"
            android:id="@+id/seeConsumptionButton"
            android:layout_weight=".5"
            android:onClick="consumptionView"
            android:text="Consumption"
            android:layout_marginRight="5dp"></Button>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/grains"
            android:textColor="#000000"
            android:id="@+id/seeNutritionButton"
            android:layout_weight=".5"
            android:onClick="nutritionView"
            android:text="Nutrition"
            android:layout_marginLeft="5dp"></Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1"

        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/protein"
            android:textColor="#000000"
            android:id="@+id/wasteButton"
            android:layout_weight=".5"
            android:onClick="wasteView"
            android:text="Waste"
            android:layout_marginRight="5dp"></Button>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/liquid"
            android:textColor="#000000"
            android:id="@+id/disclaimerButton"
            android:layout_weight=".5"
            android:onClick="disclaimerView"
            android:text="*Disclaimer"
            android:layout_marginLeft="5dp"></Button>


    </LinearLayout>


</LinearLayout>


